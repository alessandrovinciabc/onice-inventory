<%- include('partials/top'); %>

<section class="Wrapper">
  <h2 class="Header">Add new category</h2>

  <form class="m2" method="POST">
    <label for="name"> Name </label>
    <input
      required
      minlength="1"
      maxlength="100"
      type="text"
      name="name"
      autocomplete="off"
      id="name"
    />
    <label for="description"> Description </label>
    <textarea
      maxlength="2000"
      name="description"
      id="description"
      autocomplete="off"
    ></textarea>

    <button class="Button--main">Confirm</button>
  </form>

  <p>
    <a class="Action" href="/catalog">Go to catalog</a>
  </p>
</section>

<%- include('partials/bottom'); %>
