<%- include('partials/top'); %>

<div class="Wrapper">
  <form class="m2" method="POST">
    <label for="name"> Name </label>
    <input
      required
      minlength="1"
      maxlength="100"
      type="text"
      name="name"
      value="<%= category.name %>"
      id="name"
    />
    <label for="description"> Description </label>
    <textarea maxlength="2000" name="description" id="description">
<%= category.description || '' %></textarea
    >

    <button class="Button--main">Confirm Edit</button>
  </form>

  <p>
    <a class="Action" href="/catalog">Go to catalog</a>
  </p>
</div>

<%- include('partials/bottom'); %>
